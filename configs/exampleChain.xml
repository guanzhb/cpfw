<?xml version="1.0" encoding="UTF-8"?>
<exampleChain>

    <invokeChains>
        <parent widget="volume">
            <child widget="loudness"></child>
            <child widget="duck"></child>
        </parent>
    </invokeChains>

    <conditions>
        <condition widget="loudness" logic="and">
            <element when="default@volume;equal:20"></element>
            <element when="default@fade;equal:5"></element>
            <element when="gain_400hz@equalizer;equal:5"></element>
        </condition>
        <condition widget="duck" logic="or">
            <element when="default@volume;in_range:1,20"></element>
        </condition>
        <condition widget="equalizer" logic="or">
            <element when="gain_400hz@equalizer;change"></element>
        </condition>
    </conditions>

    <profiles>
        <profile widget="volume">
            <element name="default" min="1" max="20" current="5" type="1">default</element>
        </profile>
        <profile widget="fade">
            <element name="default" min="1" max="20" current="5" type="1">fade</element>
        </profile>
        <profile widget="equalizer">
            <element name="gain_100hz" min="1" max="20" current="5" type="1"></element>
            <element name="gain_200hz" min="5" max="20" current="10" type="1"></element>
            <element name="gain_400hz" min="20" max="30" current="25" type="1"></element>
            <element name="gain_800hz" min="50" max="200" current="100" type="1"></element>
        </profile>
        <profile widget="duck">
            <element name="default" min="10" max="20" current="5" type="1">default</element>
        </profile>
        <profile widget="loudness">
            <element name="default" min="10" max="20" current="5" type="1">default</element>
        </profile>
        <profile widget="stub">
            <element name="default" min="10" max="20" current="5" type="1">default</element>
        </profile>
    </profiles>

    <converts>
        <context widget="volume">
            <element origin="5" target="111111"></element>
        </context>
        <context widget="fade">
            <element origin="1" target="22222"></element>
            <element origin="2" target="3333"></element>
        </context>
    </converts>
</exampleChain>
